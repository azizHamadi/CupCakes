{% extends "::layout.html.twig" %}
{% block containt %}

    {{ form_start(form) }}
        <div class="col-lg-8 col-md-7">
            <div class="card">
                <div class="header">
                    <h4 class="title">Ajouter une recette</h4>
                </div>
                <div class="content">
                    <form method="post">
                        <div class="row">
                        <div class="col-md-4">
                            <div class="form-group">
                                {{ form_row(form.nomRec, {'label':"Nom" ,'attr': {'class': 'form-control border-input'}}) }}
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                {{ form_row(form.idCatRec, {'label':"Categorie" ,'attr': {'class': 'form-control border-input'}}) }}
                            </div>
                        </div>
                    </div>
                    </form>
                    <div class="row">
                        <div class="col-md-10">
                            <div class="form-group">
                                {{ form_row(form.descriptionRec, {'label':"Description" ,'attr': {'class': 'form-control border-input'}}) }}
                            </div>
                        </div>
                    </div>
                    <div>
                        <input type="submit" class="btn btn-info btn-fill btn-wd" value="Enregistrer" />
                        {{ form_row(form._token) }}
                    </div>
                </div>
            </div>
        </div>
    {{ form_end(form) }}


{% endblock %}